---
import { Image } from "astro:assets";

import Layout from "@layouts/Layout.astro";
import logo from "../assets/images/logo.svg";
import buttonToWorks from "../assets/images/button-to-works.svg";
import flowers from "../assets/images/flowers.webp";
import portfolio from "../assets/images/portfolio.svg";
---

<Layout title="Accueil">
  <div class="h-screen">
    <h1>
      <Image
        src={logo}
        alt="Audrey Lecuona"
        class="absolute z-30 top-1/4 md:top-1/2 left-1/2 -translate-x-1/2 -translate-y-3/4 md:-translate-y-3/4 w-[80%] sm:w-2/3"
      />
      <span class="sr-only">Audrey Lecuona</span>
    </h1>
    <a href="/works" class="group">
      <Image
        src={buttonToWorks}
        alt="Voir les rÃ©alisations"
        class="absolute z-30 top-1/2 md:top-auto md:bottom-[5%] left-1/2 -translate-y-1/2 md:-translate-y-0 -translate-x-1/2 w-24 h-24 md:w-32 md:h-32 group-hover:opacity-75 group-hover:scale-95 transition-all"
      />
    </a>
    <Image
      src={flowers}
      alt=""
      class="absolute z-10 bottom-0 sm:bottom-[10%] md:bottom-[12.5%] lg:bottom-[15%] right-0 w-full sm:w-2/3 md:w-1/2 lg:w-1/3 max-w-max"
    />
    <Image src={portfolio} alt="" class="absolute z-20 -top-[5%] md:top-[10%] -left-[5%]" />
  </div>
</Layout>
